<div id="<%= dom_id category %>">

  <h2 class='mb-3'> <%= category.name %> </h2>
<p>
    <strong>Опис категорії:</strong>
    <%= category.description %>
  </p>

  <% if category.operations.present? %>
<div id="categories" class="table-responsive">  
    <table class = "table table-striped table-hover table-bordered align-middle table-sm caption-top">
    <caption>Список операцій</caption>
   <thead>
      <tr class="table-info">
         <th scope="col">Опис операції</th>
         <th scope="col">Сума</th>
         <th scope="col">Дата</th>
         <th scope="col" class="text-center">Управління операціями </th>
      </tr>
   </thead>
   
   <tbody   
      <% category.operations.each do |operation| %> 
         <tr>
            <td><%= operation.description %></td>
            <td><%= operation.amount %></td>
            <td><%= operation.odate %></td>
            <td class="text-center"><%= link_to "View operation", operation, class: "btn btn-outline-info" %> </td>     
         </tr> 
      <% end %>        
   </tbody>
  </table>
</div>
<% else %>
<div class="notFound">
<h3>Операцій за категорією <%= category.name %> не знайдено :( </h3>
</div>
<% end %>
