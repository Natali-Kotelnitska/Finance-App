<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Сума:", style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :"Дата:", style: "display: block" %>
    <%= form.date_field :odate %>
  </div>

  <div>
    <%= form.label :"Опис", style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :"Тип операції", style: "display: block" %>
    <%= form.select :otype, ["Витрата", "Дохід"] %>
  </div>

  <div>
    <%= form.label :"Категорія", style: "display: block" %>
    <%= form.select :category_id, options_for_select(@categories.collect { |cat| [cat.name, cat.id]}) %>
  </div>

  <div class="btn btn-success mt-3">
<%= form.submit "Зберегти", class: "btn btn-success"%>
  </div>
<% end %>
